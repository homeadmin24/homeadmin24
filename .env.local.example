# .env.local.example
# Copy this to .env.local and fill in your values
# .env.local is git-ignored and should contain secrets

# Local Development Environment
APP_ENV=dev
APP_DEBUG=true
APP_SECRET=change-this-to-a-random-secret-key

# Local Database
DATABASE_URL=mysql://root:rootpassword@mysql:3306/homeadmin24?serverVersion=8.0&charset=utf8mb4&collation=utf8mb4_unicode_ci

# AI Configuration for Local Development
# Enable both Ollama (local) and Claude (API) for testing
AI_ENABLED=true
AI_CLAUDE_ENABLED=true
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Ollama is already configured in docker-compose.yaml
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b
