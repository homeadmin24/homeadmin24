<button data-drawer-target="default-sidebar" data-drawer-toggle="default-sidebar" aria-controls="default-sidebar" type="button" class="inline-flex items-center p-2 mt-2 ms-3 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
    <span class="sr-only">Open sidebar</span>
    <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
    </svg>
</button>

<aside id="default-sidebar" class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0" aria-label="Sidebar">
    <div class="h-full px-3 py-4 overflow-y-auto bg-gray-50 dark:bg-gray-800 flex flex-col">
        <div class="mb-5 text-center">
            <span class="text-xl font-semibold whitespace-nowrap dark:text-white">
                <a href="{{ path('app_home') }}">WEG-Verwaltung</a>
            </span>
        </div>
        <ul class="space-y-2 font-medium">
            <li>
                <a href="{{ path('app_weg_index') }}" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group {{ app.request.attributes.get('_route') == 'app_weg_index' ? 'bg-gray-100 dark:bg-gray-700' : '' }}">
                    <svg class="shrink-0 w-5 h-5 {{ app.request.attributes.get('_route') == 'app_weg_index' ? 'text-blue-600 dark:text-blue-400' : 'text-gray-500 dark:text-gray-400' }} transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                    </svg>
                    <span class="flex-1 ms-3 whitespace-nowrap">Weg</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_dokument_index') }}" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group {{ app.request.attributes.get('_route') starts with 'app_dokument' ? 'bg-gray-100 dark:bg-gray-700' : '' }}">
                    <svg class="shrink-0 w-5 h-5 {{ app.request.attributes.get('_route') starts with 'app_dokument' ? 'text-green-600 dark:text-green-400' : 'text-gray-500 dark:text-gray-400' }} transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="flex-1 ms-3 whitespace-nowrap">Dokumente</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_dienstleister_index') }}" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group {{ app.request.attributes.get('_route') starts with 'app_dienstleister' ? 'bg-gray-100 dark:bg-gray-700' : '' }}">
                    <svg class="shrink-0 w-5 h-5 {{ app.request.attributes.get('_route') starts with 'app_dienstleister' ? 'text-purple-600 dark:text-purple-400' : 'text-gray-500 dark:text-gray-400' }} transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v1h8v-1zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-1a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v1h-3zM4.75 12.094A5.973 5.973 0 004 15v1H1v-1a3 3 0 013.75-2.906z"></path>
                    </svg>
                    <span class="flex-1 ms-3 whitespace-nowrap">Dienstleister</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_zahlung_index') }}" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group {{ app.request.attributes.get('_route') starts with 'app_zahlung' ? 'bg-gray-100 dark:bg-gray-700' : '' }}">
                    <svg class="w-5 h-5 {{ app.request.attributes.get('_route') starts with 'app_zahlung' ? 'text-orange-600 dark:text-orange-400' : 'text-gray-500 dark:text-gray-400' }} transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"></path>
                        <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ms-3">Zahlungen</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_rechnung_index') }}" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group {{ app.request.attributes.get('_route') starts with 'app_rechnung' ? 'bg-gray-100 dark:bg-gray-700' : '' }}">
                    <svg class="shrink-0 w-5 h-5 {{ app.request.attributes.get('_route') starts with 'app_rechnung' ? 'text-red-600 dark:text-red-400' : 'text-gray-500 dark:text-gray-400' }} transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="flex-1 ms-3 whitespace-nowrap">Rechnungen</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_abrechnung_index') }}" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group {{ app.request.attributes.get('_route') starts with 'app_abrechnung' ? 'bg-gray-100 dark:bg-gray-700' : '' }}">
                    <svg class="shrink-0 w-5 h-5 {{ app.request.attributes.get('_route') starts with 'app_abrechnung' ? 'text-indigo-600 dark:text-indigo-400' : 'text-gray-500 dark:text-gray-400' }} transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm2 10a1 1 0 10-2 0v3a1 1 0 102 0v-3zm2-3a1 1 0 011 1v5a1 1 0 11-2 0v-5a1 1 0 011-1zm4-1a1 1 0 10-2 0v7a1 1 0 102 0V8z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="flex-1 ms-3 whitespace-nowrap">Abrechnung</span>
                </a>
            </li>
        </ul>
        
        {% if app.user %}
            <div class="mt-auto pt-4 border-t border-gray-200 dark:border-gray-600">
                <div class="flex items-center space-x-3 px-2 py-2 bg-gray-100 dark:bg-gray-700 rounded">
                    <span class="text-sm text-gray-600 dark:text-gray-400">{{ app.user.fullName }}</span>
                    <a href="{{ path('app_logout') }}" class="text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300" title="Abmelden">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd"></path>
                        </svg>
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
</aside>