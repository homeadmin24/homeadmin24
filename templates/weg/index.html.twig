async function submitAiQuery(provider = 'ollama') {
    const input = document.getElementById('ai-query-input');
    const query = input.value.trim();

    if (!query) {
        showAiQueryError('Bitte geben Sie eine Frage ein.');
        return;
    }

    // Hide previous results
    hideAiQueryAnswer();
    hideAiQueryError();

    // Show loading
    showAiQueryLoading();

    // Disable all buttons
    const buttons = ['ai-query-ollama-btn', 'ai-query-claude-btn', 'ai-query-compare-btn'];
    buttons.forEach(btnId => {
        const btn = document.getElementById(btnId);
        if (btn) {
            btn.disabled = true;
            btn.classList.add('opacity-50', 'cursor-not-allowed');
        }
    });

    const endpoints = {
        'ollama': '/api/ai/query/ollama',
        'claude': '/api/ai/query/claude',
        'compare': '/api/ai/query/compare'
    };

    try {
        const response = await fetch(endpoints[provider], {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ query }),
        });

        const data = await response.json();

        hideAiQueryLoading();

        if (provider === 'compare') {
            showComparisonResults(data);
        } else if (data.success) {
            showAiQueryAnswer(data.answer, data.provider, data.response_time, data.response_id, data.cost);
        } else {
            showAiQueryError(data.error || 'Ein Fehler ist aufgetreten.');
        }
    } catch (error) {
        hideAiQueryLoading();
        showAiQueryError('Netzwerkfehler: ' + error.message);
    } finally {
        // Re-enable all buttons
        buttons.forEach(btnId => {
            const btn = document.getElementById(btnId);
            if (btn) {
                btn.disabled = false;
                btn.classList.remove('opacity-50', 'cursor-not-allowed');
            }
        });
    }
}

