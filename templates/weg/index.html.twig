<script>
// Initialize tabs function
function initializeTabs() {
    // Re-initialize Flowbite components
    if (typeof window.initFlowbite === 'function') {
        window.initFlowbite();
    }
    
    // Handle initial tab selection based on URL parameter
    const urlParams = new URLSearchParams(window.location.search);
    const activeTab = urlParams.get('tab');
    
    if (activeTab) {
        // Small delay to ensure Flowbite has initialized
        setTimeout(() => {
            const tabButton = document.getElementById(activeTab + '-styled-tab');
            if (tabButton) {
                tabButton.click();
            }
        }, 100);
    }
}

// Handle both regular DOM load and Turbo navigation
document.addEventListener('DOMContentLoaded', initializeTabs);
document.addEventListener('turbo:load', initializeTabs);
document.addEventListener('turbo:frame-load', initializeTabs);

// WEG editing functions
function editWeg(id) {
    document.getElementById('weg-bezeichnung-' + id).classList.add('hidden');
    document.getElementById('weg-adresse-' + id).classList.add('hidden');
    document.getElementById('weg-bezeichnung-input-' + id).classList.remove('hidden');
    document.getElementById('weg-adresse-input-' + id).classList.remove('hidden');
    document.getElementById('weg-edit-btn-' + id).classList.add('hidden');
    document.getElementById('weg-save-btn-' + id).classList.remove('hidden');
    document.getElementById('weg-cancel-btn-' + id).classList.remove('hidden');
}

function saveWeg(id) {
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = '/weg/' + id + '/edit';
    
    const bezeichnung = document.getElementById('weg-bezeichnung-input-' + id).value;
    const adresse = document.getElementById('weg-adresse-input-' + id).value;
    
    form.innerHTML = `
        <input type="hidden" name="bezeichnung" value="${bezeichnung}">
        <input type="hidden" name="adresse" value="${adresse}">
    `;
    
    document.body.appendChild(form);
    form.submit();
}

function cancelWeg(id) {
    document.getElementById('weg-bezeichnung-' + id).classList.remove('hidden');
    document.getElementById('weg-adresse-' + id).classList.remove('hidden');
    document.getElementById('weg-bezeichnung-input-' + id).classList.add('hidden');
    document.getElementById('weg-adresse-input-' + id).classList.add('hidden');
    document.getElementById('weg-edit-btn-' + id).classList.remove('hidden');
    document.getElementById('weg-save-btn-' + id).classList.add('hidden');
    document.getElementById('weg-cancel-btn-' + id).classList.add('hidden');
}

