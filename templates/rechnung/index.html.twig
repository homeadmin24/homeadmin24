{% extends 'base.html.twig' %}

{% block title %}Rechnungen{% endblock %}

{% block body %}
    <div class="antialiased bg-gray-50 dark:bg-gray-900" 
         data-controller="rechnung"
         data-rechnung-new-url-value="{{ path('app_rechnung_new', {'modal': '1'}) }}"
         data-rechnung-edit-url-value="{{ path('app_rechnung_edit', {'id': 'RECHNUNG_ID', 'modal': '1'}) }}"
         data-rechnung-show-url-value="{{ path('app_rechnung_show', {'id': 'RECHNUNG_ID', 'modal': '1'}) }}"
         data-rechnung-delete-url-value="{{ path('app_rechnung_delete', {'id': 'RECHNUNG_ID'}) }}">
        {% include 'components/sidebar.html.twig' %}

        <main class="p-4 md:ml-64 h-auto pt-6">
            <div class="container mx-auto">
                <!-- Header with actions -->
                <div class="flex justify-between items-center mb-4">
                    <h1 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center">
                        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
                        </svg>
                        Rechnungen
                    </h1>
                    <button type="button" 
                            data-action="click->rechnung#showCreateForm"
                            class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        <i class="fas fa-plus"></i> Neue Rechnung
                    </button>
                </div>

                <!-- Filter section -->
                <div class="mb-4 p-4 bg-white dark:bg-gray-800 rounded-lg shadow">
                    <form method="GET">
                        <!-- Form row with filters and button -->
                        <div class="flex items-center gap-4">
                            <select name="dienstleister" id="dienstleister" 
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                <option value="">Alle Dienstleister</option>
                                {% for dl in dienstleister %}
                                    <option value="{{ dl.id }}" {% if selectedDienstleister == dl.id %}selected{% endif %}>
                                        {{ dl.bezeichnung }}
                                    </option>
                                {% endfor %}
                            </select>
                            <select name="ausstehend" id="ausstehend" 
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-64 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                <option value="">Alle Rechnungen</option>
                                <option value="1" {% if selectedAusstehend == '1' %}selected{% endif %}>Offene Rechnungen</option>
                                <option value="0" {% if selectedAusstehend == '0' %}selected{% endif %}>Bezahlte Rechnungen</option>
                            </select>
                            <button type="submit" 
                                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 whitespace-nowrap">
                                <i class="fas fa-filter"></i> Filtern
                            </button>
                            {% if selectedDienstleister or selectedAusstehend is not null %}
                                <a href="{{ path('app_rechnung_index') }}" 
                                   class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-4 py-2.5 hover:text-gray-900 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 whitespace-nowrap">
                                    <i class="fas fa-times"></i> Filter zurücksetzen
                                </a>
                            {% endif %}
                        </div>
                    </form>
                </div>

                <!-- Flash messages -->
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 border border-{{ label == 'success' ? 'green' : 'red' }}-400 text-{{ label == 'success' ? 'green' : 'red' }}-700 px-4 py-3 rounded mb-4">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                <!-- Rechnungen table -->
                <div class="mb-6">
                    <div class="overflow-x-auto relative shadow-md sm:rounded-lg min-h-[600px]">
                        <table id="default-table" class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-100 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Rechnungsnummer</th>
                                <th scope="col">Dienstleister</th>
                                <th scope="col">Information</th>
                                <th scope="col" data-type="number">Betrag</th>
                                <th scope="col" data-type="number">Lohn/Fahrt</th>
                                <th scope="col">Status</th>
                                <th scope="col" data-sortable="false">Aktionen</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for rechnung in rechnungen %}
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                    <td>{{ rechnung.id }}</td>
                                    <td>{{ rechnung.rechnungsnummer|default('-') }}</td>
                                    <td>{{ rechnung.dienstleister ? rechnung.dienstleister.bezeichnung : '-' }}</td>
                                    <td>{{ rechnung.information }}</td>
                                    <td class="text-red-500">{{ rechnung.betragMitSteuern|number_format(2, ',', '.') }} €</td>
                                    <td>{{ rechnung.arbeitsFahrtkosten ? rechnung.arbeitsFahrtkosten|number_format(2, ',', '.') ~ ' €' : '-' }}</td>
                                    <td>
                                        {% if rechnung.ausstehend %}
                                            <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Offen</span>
                                        {% else %}
                                            <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Bezahlt</span>
                                        {% endif %}
                                    </td>
                                    <td class="flex space-x-2">
                                        <button type="button" 
                                                data-rechnung-id="{{ rechnung.id }}"
                                                data-action="click->rechnung#showEditForm"
                                                class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-xs px-3 py-1.5 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button" 
                                                data-rechnung-id="{{ rechnung.id }}"
                                                data-action="click->rechnung#setupDeleteModal"
                                                class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-xs px-3 py-1.5 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                                    <td colspan="8" class="py-4 px-6 text-center">Keine Rechnungen gefunden</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>

        <!-- Modals -->
        {% include 'rechnung/_modals/create.html.twig' %}
        {% include 'rechnung/_modals/edit.html.twig' %}
        {% include 'rechnung/_modals/view.html.twig' %}
        {% include 'rechnung/_modals/delete.html.twig' %}
    </div>
{% endblock %}