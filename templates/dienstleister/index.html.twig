{% extends 'base.html.twig' %}

{% block title %}Dienstleister{% endblock %}

{% block body %}
    <div class="antialiased bg-gray-50 dark:bg-gray-900" 
         data-controller="dienstleister"
         data-dienstleister-new-url-value="{{ path('app_dienstleister_new', {'modal': '1'}) }}"
         data-dienstleister-edit-url-value="{{ path('app_dienstleister_edit', {'id': 'DIENSTLEISTER_ID', 'modal': '1'}) }}"
         data-dienstleister-show-url-value="{{ path('app_dienstleister_show', {'id': 'DIENSTLEISTER_ID', 'modal': '1'}) }}"
         data-dienstleister-delete-url-value="{{ path('app_dienstleister_delete', {'id': 'DIENSTLEISTER_ID'}) }}">
        {% include 'components/sidebar.html.twig' %}

        <main class="p-4 md:ml-64 h-auto pt-6">
            <div class="container mx-auto">
                <!-- Header with actions -->
                <div class="flex justify-between items-center mb-4">
                    <h1 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center">
                        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v1h8v-1zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-1a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v1h-3zM4.75 12.094A5.973 5.973 0 004 15v1H1v-1a3 3 0 013.75-2.906z"></path>
                        </svg>
                        Dienstleister
                    </h1>
                    <button type="button" 
                            data-action="click->dienstleister#showCreateForm"
                            class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        <i class="fas fa-plus"></i> Neuer Dienstleister
                    </button>
                </div>

                <!-- Filter section -->
                <div class="mb-4 p-4 bg-white dark:bg-gray-800 rounded-lg shadow">
                    <form method="GET">
                        <!-- Form row with filters and button -->
                        <div class="flex items-center gap-4">
                            <select name="artDienstleister" id="artDienstleister" 
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                <option value="">Alle Arten</option>
                                {% for art in artDienstleisterOptions %}
                                    <option value="{{ art }}" {% if selectedArtDienstleister == art %}selected{% endif %}>
                                        {{ art }}
                                    </option>
                                {% endfor %}
                            </select>
                            <button type="submit" 
                                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 whitespace-nowrap">
                                <i class="fas fa-filter"></i> Filtern
                            </button>
                            {% if selectedArtDienstleister %}
                                <a href="{{ path('app_dienstleister_index') }}" 
                                   class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-4 py-2.5 hover:text-gray-900 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 whitespace-nowrap">
                                    <i class="fas fa-times"></i> Filter zurücksetzen
                                </a>
                            {% endif %}
                        </div>
                    </form>
                </div>

                <!-- Flash messages -->
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 border border-{{ label == 'success' ? 'green' : 'red' }}-400 text-{{ label == 'success' ? 'green' : 'red' }}-700 px-4 py-3 rounded mb-4">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                <!-- Dienstleister table -->
                <div class="mb-6">
                    <div class="overflow-x-auto relative shadow-md sm:rounded-lg min-h-[600px]">
                        <table id="default-table" class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-100 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Bezeichnung</th>
                                <th scope="col">Art</th>
                                <th scope="col">Vertrag</th>
                                <th scope="col">Inkrafttreten</th>
                                <th scope="col">Vertragsende</th>
                                <th scope="col" data-type="number">Preis/Jahr</th>
                                <th scope="col">Kündigungsfrist</th>
                                <th scope="col" data-sortable="false">Aktionen</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for dienstleister in dienstleister %}
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                    <td>{{ dienstleister.id }}</td>
                                    <td class="font-medium">{{ dienstleister.bezeichnung }}</td>
                                    <td>
                                        {% if dienstleister.artDienstleister %}
                                            <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">
                                                {{ dienstleister.artDienstleister }}
                                            </span>
                                        {% else %}
                                            <span class="text-gray-400">-</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ dienstleister.vertrag|default('-') }}</td>
                                    <td>{{ dienstleister.datumInkrafttreten ? dienstleister.datumInkrafttreten|date('d.m.Y') : '-' }}</td>
                                    <td>
                                        {% if dienstleister.vertragsende %}
                                            {% set current_year = 'now'|date('Y') %}
                                            {% if dienstleister.vertragsende < current_year %}
                                                <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">
                                                    {{ dienstleister.vertragsende }} (Abgelaufen)
                                                </span>
                                            {% elseif dienstleister.vertragsende == current_year %}
                                                <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">
                                                    {{ dienstleister.vertragsende }} (Läuft aus)
                                                </span>
                                            {% else %}
                                                <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">
                                                    {{ dienstleister.vertragsende }}
                                                </span>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-gray-400">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if dienstleister.preisProJahr %}
                                            <span class="text-green-600 font-medium">{{ dienstleister.preisProJahr|number_format(2, ',', '.') }} €</span>
                                        {% else %}
                                            <span class="text-gray-400">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if dienstleister.kuendigungsfrist %}
                                            {{ dienstleister.kuendigungsfrist }} Monat{{ dienstleister.kuendigungsfrist > 1 ? 'e' : '' }}
                                        {% else %}
                                            <span class="text-gray-400">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="flex space-x-2">
                                        <button type="button" 
                                                data-dienstleister-id="{{ dienstleister.id }}"
                                                data-action="click->dienstleister#showEditForm"
                                                class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-xs px-3 py-1.5 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button" 
                                                data-dienstleister-id="{{ dienstleister.id }}"
                                                data-action="click->dienstleister#setupDeleteModal"
                                                class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-xs px-3 py-1.5 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                                    <td colspan="9" class="py-4 px-6 text-center">Keine Dienstleister gefunden</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>

        <!-- Modals -->
        {% include 'dienstleister/_modals/create.html.twig' %}
        {% include 'dienstleister/_modals/edit.html.twig' %}
        {% include 'dienstleister/_modals/view.html.twig' %}
        {% include 'dienstleister/_modals/delete.html.twig' %}
    </div>
{% endblock %}