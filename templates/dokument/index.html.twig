{% extends 'base.html.twig' %}

{% block title %}Dokumente{% endblock %}

{% block body %}
    <div class="antialiased bg-gray-50 dark:bg-gray-900" 
         data-controller="dokument rechnung"
         data-dokument-new-url-value="{{ path('app_dokument_new', {'modal': '1'}) }}"
         data-dokument-edit-url-value="{{ path('app_dokument_edit', {'id': 'DOKUMENT_ID', 'modal': '1'}) }}"
         data-dokument-delete-url-value="{{ path('app_dokument_delete', {'id': 'DOKUMENT_ID'}) }}"
         data-rechnung-new-url-value="{{ path('app_rechnung_new') }}"
         data-rechnung-edit-url-value="{{ path('app_rechnung_edit', {'id': 'RECHNUNG_ID'}) }}"
         data-rechnung-show-url-value="{{ path('app_rechnung_show', {'id': 'RECHNUNG_ID'}) }}"
         data-rechnung-delete-url-value="{{ path('app_rechnung_delete', {'id': 'RECHNUNG_ID'}) }}">
        {% include 'components/sidebar.html.twig' %}

        <main class="p-4 md:ml-64 h-auto pt-6">
            <div class="container mx-auto">
                <!-- Header with actions -->
                <div class="flex justify-between items-center mb-4">
                    <h1 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center">
                        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
                        </svg>
                        Dokumente
                    </h1>
                    <button type="button" 
                            data-action="click->dokument#showCreateForm"
                            class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        <i class="fas fa-plus"></i> Neues Dokument
                    </button>
                </div>

                <!-- Filter section -->
                <div class="mb-4 p-4 bg-white dark:bg-gray-800 rounded-lg shadow">
                    <form method="GET">
                        <div class="flex items-center gap-4">
                            <select name="kategorie" id="kategorie" 
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                <option value="">Alle Kategorien</option>
                                {% for kategorie in kategorieOptions %}
                                    <option value="{{ kategorie }}" {% if selectedKategorie == kategorie %}selected{% endif %}>
                                        {{ kategorie|title }}
                                    </option>
                                {% endfor %}
                            </select>
                            <button type="submit" 
                                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 whitespace-nowrap">
                                <i class="fas fa-filter"></i> Filtern
                            </button>
                            {% if selectedKategorie %}
                                <a href="{{ path('app_dokument_index') }}" 
                                   class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-4 py-2.5 hover:text-gray-900 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 whitespace-nowrap">
                                    <i class="fas fa-times"></i> Filter zurücksetzen
                                </a>
                            {% endif %}
                        </div>
                    </form>
                </div>

                <!-- Flash messages -->
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 border border-{{ label == 'success' ? 'green' : 'red' }}-400 text-{{ label == 'success' ? 'green' : 'red' }}-700 px-4 py-3 rounded mb-4">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                <!-- Dokumente table -->
                <div class="mb-6">
                    <div class="overflow-x-auto relative shadow-md sm:rounded-lg min-h-[600px]">
                        <table id="default-table" class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-100 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Dateiname</th>
                                <th scope="col">Kategorie</th>
                                <th scope="col">Upload-Datum</th>
                                <th scope="col">Größe</th>
                                <th scope="col">Rechnung</th>
                                <th scope="col">Dienstleister</th>
                                <th scope="col" data-sortable="false">Aktionen</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for dokument in dokumente %}
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                    <td>{{ dokument.id }}</td>
                                    <td class="font-medium">
                                        <div class="flex items-center">
                                            <i class="fas fa-file-{{ dokument.dateierweiterung == 'pdf' ? 'pdf' : (dokument.dateierweiterung in ['jpg', 'jpeg', 'png'] ? 'image' : 'alt') }} text-gray-400 mr-2"></i>
                                            {{ dokument.dateiname }}
                                        </div>
                                    </td>
                                    <td>
                                        {% if dokument.kategorie %}
                                            <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">
                                                {{ dokument.kategorie|title }}
                                            </span>
                                        {% else %}
                                            <span class="text-gray-400">-</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ dokument.uploadDatum|date('d.m.Y H:i') }}</td>
                                    <td>{{ dokument.dateigroesseFormatiert }}</td>
                                    <td>
                                        {% if dokument.rechnung %}
                                            <button data-action="rechnung#showRechnungDetails"
                                                    data-rechnung-id="{{ dokument.rechnung.id }}"
                                                    class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-600 underline bg-transparent border-0 p-0 cursor-pointer">
                                                #{{ dokument.rechnung.id }}
                                            </button>
                                        {% else %}
                                            <span class="text-gray-400">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if dokument.dienstleister %}
                                            {{ dokument.dienstleister.bezeichnung }}
                                        {% else %}
                                            <span class="text-gray-400">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="flex space-x-2">
                                        <a href="{{ path('app_dokument_download', {'id': dokument.id}) }}"
                                           class="text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-xs px-3 py-1.5 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"
                                           title="Download">
                                            <i class="fas fa-download"></i>
                                        </a>
                                        <button type="button" 
                                                data-dokument-id="{{ dokument.id }}"
                                                data-action="click->dokument#showEditForm"
                                                class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-xs px-3 py-1.5 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                                                title="Bearbeiten">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button" 
                                                data-dokument-id="{{ dokument.id }}"
                                                data-action="click->dokument#setupDeleteModal"
                                                class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-xs px-3 py-1.5 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800"
                                                title="Löschen">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                                    <td colspan="8" class="py-4 px-6 text-center">Keine Dokumente gefunden</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>

        <!-- Modals -->
        {% include 'dokument/_modals/create.html.twig' %}
        {% include 'dokument/_modals/edit.html.twig' %}
        {% include 'dokument/_modals/delete.html.twig' %}

        <!-- Rechnung Modals -->
        {% include 'rechnung/_modals/view.html.twig' %}
        {% include 'rechnung/_modals/edit.html.twig' %}
        {% include 'rechnung/_modals/delete.html.twig' %}
    </div>
{% endblock %}