AI_ENABLED=true
AI_PROVIDER=claude

# Claude API (current setup)
AI_CLAUDE_ENABLED=true
# ANTHROPIC_API_KEY must be set via environment variable or GitHub Secret

# Ollama (for later migration)
# AI_CLAUDE_ENABLED=false
# OLLAMA_URL=http://ollama:11434
# OLLAMA_MODEL=llama3.1:8b

# Security
# These MUST be set via environment variables:
# - APP_SECRET
# - DATABASE_URL
# - ANTHROPIC_API_KEY
